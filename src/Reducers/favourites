const defaultState = {
    movies: []
};

const favouriteReducer = (state = defaultState, action) => {
    switch (action.type) {
        case 'ADD FAVOURITE':
            let movies = state.movies;
            movies.push(action.payload);
            return {
                ...state, 
                movies: movies
            };
        case 'REMOVE FAVOURITE':
            return state - action.payload;
        default:
            return state;
    }
}

export default favouriteReducer
